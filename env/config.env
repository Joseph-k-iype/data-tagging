# Application configuration
APP_NAME=AI Tagging Service
APP_VERSION=1.0.0
DEBUG=false
ENVIRONMENT=production
LOG_LEVEL=INFO
API_PREFIX=/api/v1

# Security settings
SECRET_KEY=supersecretkey
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
CORS_ORIGINS=*
API_KEY_HEADER=X-API-Key
USE_API_KEY=false

# Vector database settings
VECTOR_DB_TYPE=chroma
CHROMA_PERSIST_DIR=./data/chroma_db
CHROMA_COLLECTION=business_terms
DISTANCE_METRIC=cosine
EMBEDDING_DIMENSION=1536

# Classification settings
DEFAULT_CLASSIFICATION_METHOD=agent
AVAILABLE_CLASSIFICATION_METHODS=embeddings,llm,agent
CLASSIFICATION_CACHE_ENABLED=true
CLASSIFICATION_CACHE_TTL=3600
SIMILARITY_THRESHOLD=0.5
TOP_N_RESULTS=5
INCLUDE_BROADER_TERMS=true
CONFIDENCE_THRESHOLD=70.0

# Rate limit settings
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100
RATE_LIMIT_CLASSIFICATION=50
BATCH_SIZE_LIMIT=100

# Data paths
DATA_DIR=./data
PBT_CSV_PATH=./data/pbt_data.csv

# Proxy settings (optional)
PROXY_ENABLED=false
HTTPS_PROXY_DOMAIN=
AD_USERNAME=
AD_USER_PW=
CUSTOM_NO_PROXY=

# Azure settings - replace with your actual values
AZURE_TENANT_ID=your-tenant-id
AZURE_CLIENT_ID=your-client-id
AZURE_CLIENT_SECRET=your-client-secret
AZURE_ENDPOINT=https://your-endpoint.openai.azure.com/
API_VERSION=2023-05-15
MODEL_NAME=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-large
EMBEDDING_DEPLOYMENT_NAME=text-embedding-3-large
TOKEN_CACHING_ENABLED=true
TOKEN_REFRESH_INTERVAL=300
TOKEN_VALIDATION_THRESHOLD=600

# Azure managed identity (optional)
USE_MANAGED_IDENTITY=false
SECURED_ENDPOINTS=false